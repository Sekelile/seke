<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoFocusButtonColor="@android:color/white"
            app:autoFocusButtonVisible="true"
            app:flashButtonColor="@android:color/white"
            app:flashButtonVisible="true"
            app:frameColor="@android:color/white"
            app:frameCornersSize="50dp"
            android:visibility="gone"
            app:frameCornersRadius="0dp"
            app:frameAspectRatioWidth="1"
            app:frameAspectRatioHeight="1"
            app:frameSize="0.75"
            app:frameThickness="2dp"
            app:maskColor="#77000000"/>

<RelativeLayout android:id="@+id/main_ly" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatButton
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/input_margin"
            android:text="SCAN"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_button"
            android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatButton
            android:id="@+id/pay_btn"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/scan_btn"
            android:layout_margin="@dimen/input_margin"
            android:text="PAY"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_button"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/input_margin"
                android:padding="@dimen/input_margin"
                android:layout_below="@id/scan_btn"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="20dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/input_margin"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Total"
                            android:layout_alignParentStart="true"
                            android:padding="4dp"
                            android:id="@+id/total_text_view"
                            android:layout_height="wrap_content"/>
                    <Button
                            android:background="@drawable/round_button"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:padding="4dp"
                            android:layout_alignParentEnd="true"
                            android:text="Request Payment"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ScrollView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/items_recycler_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </ScrollView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>